{
    "extends": [
        "@vue/tsconfig/tsconfig.json"
    ],
    "include": [
        "env.d.ts",
        "src/**/*",
        "src/**/*.vue"
    ],
    "compilerOptions": {
        "ignoreDeprecations": "5.0",
        "types": [
            "node"
        ],
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
        "typeRoots": [
            "./node_modules/@types/",
            "./src/typings/"
        ]
    },

    "references": [
        {
            "path": "./tsconfig.vite-config.json"
        }
    ]
}
